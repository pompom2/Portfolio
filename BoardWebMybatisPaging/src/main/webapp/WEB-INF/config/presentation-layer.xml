	<!-- 파일 업로드 설정 -->
	<!-- 파일업로드 최대크기: 2MB로 설정, 최대크기를 정하지 않으면 무제한 -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="2000000"></property>
	</bean>
	
	
